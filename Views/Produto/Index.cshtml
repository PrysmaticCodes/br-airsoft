@model IEnumerable<TCC_BR.Models.Produto>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Produtos</title>
    <link rel="stylesheet" href="~/css/produtos.css"> 
</head>
<body>
    <!--Menu lateral-->
    <nav class="menu-lateral">
        <div class="btn-exp">
            <i class="bi bi-list" id="btn-a"></i>
        </div>

        <ul>
            <li class="item-menu ativo">
                <a href="index.html">
                    <span class="icon"><i class="bi bi-house-fill"></i></span>
                    <span class="txt-link">Home</span>
                </a>
            </li>
            <li class="item-menu">
                <a href="#">
                    <span class="icon"><i class="bi bi-cart4"></i></i></span>
                    <span class="txt-link">Carrinho</span>
                </a>
            </li>
            <li class="item-menu">
                <a href="#">
                    <span class="icon"><i class="bi bi-boxes"></i></span>
                    <span class="txt-link">Produtos</span>
                </a>
            </li>
            <li class="item-menu">
                <a href="#card-item">
                    <span class="icon"><i class="bi bi-tags"></i></span>
                    <span class="txt-link">Ofertas</span>
                </a>
            </li>
            <li class="item-menu">
                <a href="#txt-1">
                    <span class="icon"><i class="bi bi-rocket-takeoff"></i></span>
                    <span class="txt-link">Novidades</span>
                </a>
            </li>
            <li class="item-menu">
                <a href="cadastro.html">
                    <span class="icon"><i class="bi bi-person-circle"></i></span>
                    <span class="txt-link">Minha Conta</span>
                </a>
            </li>
        </ul>
    </nav>
    <!--Fim lateral-->
    <!--Barra Pesquisa-->
    <div class="central">
        <div class="pesquisa">
            <form action="">
                <input class="iptPesquisa" type="text" placeholder="Pesquisar">
                <button type="submit"><i class="bi bi-search" id="lupa-busca"></i></button>
            </form>
        </div>
    
           @foreach (var item in Model)
            {
              <div class="produtos">
                  <div class="card">
                      <div class="img-card">
                          <img id="card-item" data-src=" " alt="Thumbnail [300x300]"
                               src="@item.ImagemProd" data-holder-rendered="true">
                      </div>
                      <div class="infos">
                          <p class="nome">@item.NomeProduto</p>
                          <p class="preço">@item.PrecoProd</p>
                       
                      </div>
                  </div>
              </div>
             <div class="card-footer space-between-flex" style="width:90%">
                <div>
                   @using (Html.BeginForm("AdicionarItem", "Home", FormMethod.Post))
                   {
                       <input type="hidden" name="id" value=@item.ID>
                       <input type="hidden" name="quantidade" value="1">
                       <input type="hidden" name="Preco" value="@item.PrecoProd">
                       <button class="btnComprar" onclick="">Comprar</button>
                   }
                </div>
            </div>

            }
                    
                
            
        
    </div>

    <script src="auto.js"></script>
</body>
</html>
