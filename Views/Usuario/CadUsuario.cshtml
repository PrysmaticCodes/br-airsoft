@model TCC_BR.Models.Usuario
@inject TCC_BR.Libraries.Login.LoginUsuario _loginUsuario

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/estilo.css">
</head>
<body>
    <nav class="menu-lateral">
        <div class="btn-exp">
            <i class="bi bi-list" id="btn-a"></i>
        </div>
        <ul>
            <li class="item-menu ativo">
                <a asp-controller="Home" asp-action="Index">
                    <span class="icon"><i class="bi bi-house-fill"></i></span>
                    <span class="txt-link">Home</span>
                </a>
            </li>
            <li class="item-menu">
                <a href="#">
                    <span class="icon"><i class="bi bi-cart4"></i></i></span>
                    <span class="txt-link">Carrinho</span>
                </a>
            </li>
            <li class="item-menu">
                <a href="#">
                    <span class="icon"><i class="bi bi-boxes"></i></span>
                    <span class="txt-link">Produtos</span>
                </a>
            </li>
            <li class="item-menu">
                <a href="#card-item">
                    <span class="icon"><i class="bi bi-tags"></i></span>
                    <span class="txt-link">Ofertas</span>
                </a>
            </li>
            <li class="item-menu">
                <a href="#txt-1">
                    <span class="icon"><i class="bi bi-rocket-takeoff"></i></span>
                    <span class="txt-link">Novidades</span>
                </a>
            </li>
            <li class="item-menu">
                @if (_loginUsuario != null && _loginUsuario.GetUsuario() != null)
                {
                    <a asp-controller="UsuarioLogin" asp-action="PainelCliente">
                        <span class="icon"><i class="bi bi-person-circle"></i></span>
                        <span class="txt-link">Minha Conta</span>
                    </a>
                }

                else
                {
                    <a asp-controller="UsuarioLogin" asp-action="Login">
                        <span class="icon"><i class="bi bi-person-circle"></i></span>
                        <span class="txt-link">Minha Conta</span>
                    </a>
                    
                }
            </li>
        </ul>
    </nav>

    <section class="cad-background">
        <div class="cad-pt1">
            <div>
                <img src="~/imagens/logo.png" alt="logo loja">
            </div>

            <!-- O action deve apontar para o método correto no controlador -->
            <form asp-action="CadUsuario" method="post">
                <h1>Pronto para a missão? Cadastre-se já!</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <input asp-for="Nome" type="text" placeholder="Nome" autocomplete="given-name">  <br />
                    <span asp-validation-for="Nome" class="text-danger"></span> 
                </div>
                <div>
                    <input asp-for="Email" type="email" placeholder="Email" autocomplete="off"> <br />
                    <span asp-validation-for="Email" class="text-danger"></span> 
                </div>
                <div>
                    <input asp-for="Celular" type="tel" placeholder="Celular"> <br />
                    <span asp-validation-for="Celular" class="text-danger"></span> 
                </div>
                <div>
                    <input asp-for="CPF" type="text" placeholder="CPF"> <br />
                    <span asp-validation-for="CPF" class="text-danger"></span> 
                </div>
                <div>
                    <input asp-for="Senha" type="password" placeholder="Senha"> <br />
                    <span asp-validation-for="Senha" class="text-danger"></span> 
                </div>
                <div>
                    <input type="password" asp-for="Confirme" placeholder="Confirme sua senha"> <br />
                    <span asp-validation-for="Confirme" class="text-danger"></span>
                </div>

                <button type="submit">Enviar</button>
            </form>

        </div>

        <div class="cad-pt2">
            <div id="g-1">
                <i class="bi bi-box-seam-fill"></i>
                <span>Sua encomenda protegida!</span>
            </div>
            <div id="g-2">
                <i class="bi bi-hearts"></i>
                <span>Favorite os itens que mais gostou!</span>
            </div>
            <div id="g-3">
                <i class="bi bi-journal-richtext"></i>
                <span>Tenha acesso ao nosso catálogo </span>
            </div>
        </div>
    </section>

    <!-- Inclua o arquivo JavaScript -->
    <script src="~/js/auto.js"></script>
</body>
</html>
